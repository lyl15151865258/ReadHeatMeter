<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MyRadioButton">
        <attr name="drawableSize" format="dimension" />
        <attr name="drawableTop" format="reference" />
        <attr name="drawableLeft" format="reference" />
        <attr name="drawableRight" format="reference" />
        <attr name="drawableBottom" format="reference" />
    </declare-styleable>
    <declare-styleable name="SlidingMenu">
        <attr name="mode">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
        <attr name="viewAbove" format="reference" />
        <attr name="viewBehind" format="reference" />
        <attr name="behindOffset" format="dimension" />
        <attr name="behindWidth" format="dimension" />
        <attr name="behindScrollScale" format="float" />
        <attr name="touchModeAbove">
            <enum name="margin" value="0" />
            <enum name="fullscreen" value="1" />
            <enum name="none" value="2" />
        </attr>
        <attr name="touchModeBehind">
            <enum name="margin" value="0" />
            <enum name="fullscreen" value="1" />
            <enum name="none" value="2" />
        </attr>
        <attr name="shadowDrawable" format="reference" />
        <attr name="shadowWidth" format="dimension" />
        <attr name="fadeEnabled" format="boolean" />
        <attr name="fadeDegree" format="float" />
        <attr name="selectorEnabled" format="boolean" />
        <attr name="selectorDrawable" format="reference" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <declare-styleable name="PagerSlidingTabStrip">
        <attr name="slidingBlock" format="reference|color" />
        <attr name="allowWidthFull" format="boolean" />
        <attr name="disableViewPager" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RefreshLayout">
        <attr name="footer_view_background" format="color" />
        <attr name="footer_view_text_color" format="color" />
        <attr name="is_need_footer" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CirclePagerIndicator">
        <attr name="circle_indicator_centerHorizontal" format="boolean" />
        <attr name="circle_indicator_follow" format="boolean" />
        <attr name="circle_indicator_orientation" format="reference" />
        <attr name="circle_indicator_color" format="color" />
        <attr name="circle_indicator_stroke_color" format="color" />
        <attr name="circle_indicator_stroke_width" format="dimension" />
        <attr name="circle_indicator_fill_color" format="color" />
        <attr name="circle_indicator_radius" format="dimension" />
        <attr name="circle_indicator_space" format="dimension" />
        <attr name="circle_indicator_indicator_radius" format="dimension" />
    </declare-styleable>
    <declare-styleable name="LinePagerIndicator">
        <attr name="line_indicator_centerHorizontal" format="boolean" />
        <attr name="line_indicator_width" format="dimension" />
        <attr name="line_indicator_height" format="dimension" />
        <attr name="line_indicator_indicator_height" format="dimension" />
        <attr name="line_indicator_space" format="dimension" />
        <attr name="line_indicator_fill_color" format="color" />
        <attr name="line_indicator_indicator_color" format="color" />
        <attr name="line_indicator_follow" format="boolean" />
    </declare-styleable>

    <attr name="verticalSpace" format="dimension" />
    <attr name="horizontalSpace" format="dimension" />

    <declare-styleable name="FlowLayout">
        <attr name="verticalSpace" />
        <attr name="horizontalSpace" />
    </declare-styleable>

    <declare-styleable name="TweetPicturesLayout">
        <attr name="verticalSpace" />
        <attr name="horizontalSpace" />
        <attr name="column" format="integer" />
        <attr name="maxPictureSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="TitleBar">
        <attr name="aTitle" format="string" />
        <attr name="aIcon" format="reference" />
    </declare-styleable>

    <attr name="PermissionBackround" format="reference"></attr>
    <attr name="PermissionTitleColor" format="color"></attr>
    <attr name="PermissionMsgColor" format="color"></attr>
    <attr name="PermissionItemTextColor" format="color"></attr>
    <attr name="PermissionButtonTextColor" format="color"></attr>
    <attr name="PermissionButtonBackground" format="reference"></attr>
    <attr name="PermissionBgFilterColor" format="color"></attr>
    <attr name="PermissionIconFilterColor" format="color"></attr>
</resources>
